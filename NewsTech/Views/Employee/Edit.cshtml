@model EmployeeModel
@{
	Layout = "_Layout_Admin";
}

<section class="section">
	<div class="section-header">
		<div class="section-header-back">
			<a asp-controller="Employee" asp-action="List" class="btn btn-icon"><i class="fas fa-arrow-left"></i></a>
		</div>
		<h1>Personel İşlemleri</h1>
		<div class="section-header-breadcrumb">
			<div class="breadcrumb-item "><a href="#">Personel</a></div>
			<div class="breadcrumb-item"><a href="#">Personel İşlemleri</a></div>
			<div class="breadcrumb-item active">Personel Düzenleme</div>
		</div>
	</div>
	<div class="section-body">
		<h2 class="section-title">Personel Düzenleme</h2>
		@*<p class="section-lead">
				On this page you can create a new post and fill in all fields.
			</p>*@
		<div class="row">
			<div class="col-12">
				<div class="card">
					@*<div class="card-header">
							<h4>Write Your Post</h4>
						</div>*@
					<div class="card-body">
						<form asp-controller="Employee" asp-action="Edit" method="post" enctype="multipart/form-data">
							<input type="hidden" asp-for="Id" />
							<div class="form-group row mb-4">
								<label asp-for="Name" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="Name" class="form-control" autofocus />
								</div>
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="Surname" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="Surname" class="form-control" />
								</div>
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="Email" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="Email" class="form-control" />
								</div>
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="SelectedRoleId" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.SelectedRoleId, Model.AvailableRoles, new { @class = "form-control selectric" })
								</div>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="PhoneNumber" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="PhoneNumber" class="form-control" />
								</div>
								<span asp-validation-for="PhoneNumber" class="text-danger"></span>
							</div>

							<div class="form-group row mb-4">
								<label asp-for="SelectedGenderId" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.SelectedGenderId, Model.GenderList, new { @class = "form-control selectric" })
								</div>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="SelectedMaritalStatusId" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.SelectedMaritalStatusId, Model.MaritalStatus, new { @class = "form-control selectric" })
								</div>
							</div>


							<div class="form-group row mb-4">
								<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<button type="submit" class="btn btn-primary">Kaydet</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
