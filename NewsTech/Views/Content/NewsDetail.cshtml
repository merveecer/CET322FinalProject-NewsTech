										<div class="content">
											<!-- Title -->
											<h4 class="title"><a href="post-details.html">Upcoming Event 10 Dec at Bonobisree Area.</a></h4>
											<!-- Meta -->
											<div class="meta fix">
												<span class="meta-item date"><i class="fa fa-clock-o"></i>10 March 2017</span>
											</div>
										</div>
									</div>
								</div><!-- Overlay Post End -->

							</div>

							<div class="col-md-6 col-12">

								<!-- Overlay Post Start -->
								<div class="post post-overlay hero-post">
									<div class="post-wrap">
										<!-- Image -->
										<div class="image"><img src="~/khobor/img/post/post-135.jpg" alt="post"></div>
										<!-- Category -->
										<a href="#" class="category fashion">fashion</a>
										<!-- Content -->
										<div class="content">
											<!-- Title -->
