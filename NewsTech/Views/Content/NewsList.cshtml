@model List<ContentModel>
@{
	Layout = "_Layout_Admin";
}
<section class="section">
	<div class="section-header">
		<h1>Haber Yönetimi</h1>
		<div class="section-header-breadcrumb">
			<div class="breadcrumb-item"><a href="#">Haber</a></div>
			<div class="breadcrumb-item "><a href="#">Haber Yönetemi</a></div>
			<div class="breadcrumb-item active">Haber Listesi</div>
		</div>
	</div>
	<div class="section-body">
		<h2 class="section-title">Haber Listesi</h2>
		<p class="section-lead float-right">
		</p>

		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<div class="buttons float-right">
							<a asp-controller="Content" asp-action="ContentCreate" class="btn btn-success"> Haber Ekle</a>
						</div>
						<div class="table-responsive">
							<table class="table table-striped" id="table-2">
								<thead>
									<tr>
										<th class="text-center">
											<div class="custom-checkbox custom-control">
												<input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad" class="custom-control-input" id="checkbox-all">
												<label for="checkbox-all" class="custom-control-label">&nbsp;</label>
											</div>
										</th>
										<th>Haber Başlığı</th>
										<th>Küçük Resim</th>
										<th>Yayınlanma Durumu</th>
										<th>Oluşturma Tarihi</th>
										<th>Oluşturan Kişi</th>
										<th>İşlemler</th>


									</tr>
								</thead>
								<tbody>
									@foreach (var haber in Model) {
										<tr>
											<td>
												<div class="custom-checkbox custom-control">
													<input type="checkbox" data-checkboxes="mygroup" class="custom-control-input" id="@haber.Id">
													<label for="checkbox-1" class="custom-control-label">&nbsp;</label>
												</div>
											</td>
											<td>@haber.Title</td>
											<td>
												<img src="~/uploads/@haber.SelectedThumbnailImageUrl" width="100" height="100" />
											</td>



											<td> <div class="badge @(haber.isPublished==1 ? " badge-success" : " badge-danger")"> @(haber.isPublished == 1 ? "Aktif" : "Pasif")</div></td>

											<td>@haber.CreatedDate</td>
											<td>@haber.CreatedUserFullName</td>

											<td> <a asp-controller="Content" asp-action="ContentEdit" asp-route-id="@haber.Id" class="btn btn-success">Güncelle</a> <a href="#" class="btn btn-danger">Sil</a></td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
