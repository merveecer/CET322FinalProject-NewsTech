@model ContentModel
@{
	Layout = "_Layout_Admin";
}

<section class="section">
	<div class="section-header">
		<div class="section-header-back">
			<a asp-controller="Content" asp-action="List" class="btn btn-icon"><i class="fas fa-arrow-left"></i></a>
		</div>
		<h1>İçerik Yönetimi</h1>
		<div class="section-header-breadcrumb">
			<div class="breadcrumb-item "><a href="#">İçerik</a></div>
			<div class="breadcrumb-item"><a href="#">İçerik Yönetimi</a></div>
			<div class="breadcrumb-item active">İçerik Kayıt</div>
		</div>
	</div>
	<div class="section-body">
		<h2 class="section-title">Haber Kayıt</h2>
		@*<p class="section-lead">
				On this page you can create a new post and fill in all fields.
			</p>*@
		<div class="row">
			<div class="col-12">
				<div class="card">
					@*<div class="card-header">
							<h4>Write Your Post</h4>
						</div>*@
					<div class="card-body">
						<form asp-controller="Content" asp-action="NewsCreate" method="post" enctype="multipart/form-data">

							<div class="form-group row mb-4">
								<label asp-for="Title" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="Title" class="form-control" autofocus />
								</div>
								<span asp-validation-for="Title" class="text-danger"></span>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="SelectedThumbnailImageUrl" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<div id="image-preview" class="image-preview">
										<label for="thumnailImages" id="image-label">Choose File</label>
										<input type="file" name="thumnailImages" id="thumnailImages" />
									</div>
								</div>
							</div>

							<div class="form-group row mb-4">
								<label asp-for="ContentTextPart1" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="ContentTextPart1" class="form-control" />
								</div>
								<span asp-validation-for="ContentTextPart1" class="text-danger"></span>
							</div>

							<div class="form-group row mb-4">
								<label asp-for="ContentTextPart2" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="ContentTextPart2" class="form-control" />
								</div>
								<span asp-validation-for="ContentTextPart2" class="text-danger"></span>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="SelectedImageUrl" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<div id="image-preview" class="image-preview">
										<label for="newsImages" id="image-label">Choose File</label>
										<input type="file" name="newsImages" id="newsImages" />
									</div>
								</div>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="ImagePosition" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.ImagePosition, Model.Position, new { @class = "form-control selectric" })
								</div>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="SelectedCategoryId" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.SelectedCategoryId, Model.AvailableCategories, new { @class = "form-control selectric" })
								</div>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="isPublished" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.isPublished, Model.PublishingStatus, new { @class = "form-control selectric" })
								</div>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="isReviewVideo" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.isReviewVideo, Model.ContentType, new { @class = "form-control selectric" })
								</div>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="VideoUrl" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="VideoUrl" class="form-control" />
								</div>
								<span asp-validation-for="VideoUrl" class="text-danger"></span>
							</div>

							<div class="form-group row mb-4">
								<label asp-for="VideoPosition" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									@Html.DropDownListFor(x => x.VideoPosition, Model.Position, new { @class = "form-control selectric" })
								</div>
							</div>

							<div class="form-group row mb-4">
								<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<button type="submit" class="btn btn-primary">Kaydet</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
