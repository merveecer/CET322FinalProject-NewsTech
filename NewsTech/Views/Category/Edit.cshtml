@model CategoryModel
@{
	Layout = "_Layout_Admin";
}

<section class="section">
	<div class="section-header">
		<div class="section-header-back">
			<a asp-controller="Category" asp-action="List" class="btn btn-icon"><i class="fas fa-arrow-left"></i></a>
		</div>
		<h1>Kategori İşlemleri</h1>
		<div class="section-header-breadcrumb">
			<div class="breadcrumb-item "><a href="#">Kategori</a></div>
			<div class="breadcrumb-item"><a href="#">Kategori İşlemleri</a></div>
			<div class="breadcrumb-item active">Kategori Kayıt</div>
		</div>
	</div>
	<div class="section-body">
		<h2 class="section-title">Kategori Kayıt</h2>
		@*<p class="section-lead">
				On this page you can create a new post and fill in all fields.
			</p>*@
		<div class="row">
			<div class="col-12">
				<div class="card">
					@*<div class="card-header">
							<h4>Write Your Post</h4>
						</div>*@
					<div class="card-body">
						<form asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
							<input type="hidden" asp-for="Id" />
							<div class="form-group row mb-4">
								<label asp-for="Name" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="Name" class="form-control" autofocus />
								</div>
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-group row mb-4">
								<label asp-for="DisplayOrder" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<input asp-for="DisplayOrder" class="form-control" />
								</div>
								<span asp-validation-for="DisplayOrder" class="text-danger"></span>
							</div>


							<div class="form-group row mb-4">
								<div class="custom-control custom-checkbox col-md-4 text-md-right">
									<input type="checkbox" class="custom-control-input" id="customCheck1" asp-for="isPublished">
									<label class="custom-control-label " for="customCheck1">Yayınla</label>
								</div>
							</div>


							<div class="form-group row mb-4">
								<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
								<div class="col-sm-12 col-md-7">
									<button type="submit" class="btn btn-primary">Kaydet</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
